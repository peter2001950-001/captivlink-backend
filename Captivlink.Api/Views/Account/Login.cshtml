@model Captivlink.Api.Identity.Account.LoginViewModel

<div class="text-center mb-5">
    <div class="h3 mb-3 fw-normal">Welcome back!</div>
    <span class="text-600 font-medium">Sign in to continue</span>
</div>

<partial name="_ValidationSummary" />
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form asp-route="Login" class="space-y-6">
        
        <input type="hidden" asp-for="ReturnUrl" />
        <div>
            <label class="block text-sm font-medium leading-6 text-gray-900" asp-for="Username"></label>
            <div class="mt-3">
                <input class="form-control w-30rem" placeholder="Username" asp-for="Username" autofocus>
            </div>
        </div>

        <div>
            <div class="d-flex align-items-center justify-content-between mt-3">
                <label asp-for="Password" class="block text-sm font-medium leading-6 text-gray-900"></label>
               
                <div class="text-sm">
                    <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">Forgot password?</a>
                </div>
            </div>
            <div class="mt-2">
                <input type="password" placeholder="Password" asp-for="Password" autocomplete="off" class="form-control w-30rem">
            
                </div>
        </div>
        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" asp-for="RememberLogin" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember me
            </label>
        </div>

        <div>
            <button type="submit" class="d-flex w-100 justify-content-center btn btn-primary mt-3">Sign in</button>
        </div>
    </form>

    <p class="mt-10 text-center text-sm text-gray-500">
        Not a member?
        <a href="#">Start a 14 day free trial</a>
    </p>
</div>
