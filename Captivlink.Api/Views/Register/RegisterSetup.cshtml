@model Captivlink.Api.Identity.Account.LoginViewModel

<div class="text-center mb-5">
    <div class="h3 mb-3 fw-normal">Sign up </div>
    <span class="text-600 font-medium">Choose what best discribes you</span>
</div>

<partial name="_ValidationSummary" />
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="radio-group row justify-content-between px-3 text-center a">
        <div class="mr-sm-2 mx-1 card-block  py-0 text-center radio" data-id="Business">
            <div class="flex-row">
                <div class="col">
                    <div class="pic"> <img class="irc_mut img-fluid" src="/images/online-shop.png" width="100" height="100"> </div>
                    <p>I have a business and I would like have my products promoted</p>
                </div>
            </div>
        </div>
        <div class="ml-sm-2 mx-1 card-block  py-0 text-center radio" data-id="ContentCreator">
            <div class="flex-row">
                <div class="col">
                    <div class="pic"> <img class="irc_mut img-fluid" src="/images/creative.png"  width="100" height="100"> </div>
                    <p>I am a content creator and I can advertise products</p>
                </div>
            </div>
        </div>
    </div>
    
    <button class="btn btn-primary float-end btn-lg" disabled="disabled" id="submit">Continue</button>
</div>

@section scripts
{
    <script>
    $(document).ready(function () {
        $('.radio-group .radio').click(function () {
            $('.selected .fa').removeClass('fa-check');
            $('.radio').removeClass('selected');
            $(this).addClass('selected');
            $("#submit").prop('disabled', false);
        });
    });

        $("#submit").on("click", function () {
            var role = $(".radio.selected").attr("data-id");
            location.href = '/register/details?role=' + role;
        })
    </script>
}