<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>Captivlink - Affiliate link platform</title>
    
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    
    <link rel="stylesheet" href="~/css/site-style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="surface-ground d-flex align-items-center justify-content-center overflow-hidden" style="min-height: 100vh; min-width: 100vw;">
        <div class="d-flex flex-column align-items-center justify-content-center">
        <img alt="Sakai logo" class="logo" src="/logo.png">
            <div style="border-radius: 56px;padding: 0.3rem;background: linear-gradient(180deg, #6366F1 10%, rgba(33, 150, 243, 0) 30%);">
            <div class="w-full surface-card" style="border-radius:56px;">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
